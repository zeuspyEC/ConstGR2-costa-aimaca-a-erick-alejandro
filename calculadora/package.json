{
  "name": "calculadora",
  "version": "0.0.1",
  "description": "Calculadora NestJS con CI/CD optimizado para rendimiento y escalabilidad",
  "author": "Erick Alejandro",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0 <23.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "desplegar-directorios": "dir",
    
    "prebuild": "npm run clean && npm run lint:check",
    "build": "nest build",
    "build:prod": "NODE_ENV=production npm run build",
    "build:analyze": "npm run build && npm run analyze:bundle",
    
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:dev:hmr": "nest start --watch --preserveWatchOutput",
    
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\" --format=stylish --cache --cache-location=.eslintcache",
    "lint:fix": "npm run lint",
    "lint:ci": "npm run lint:check -- --max-warnings=0",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:ci": "jest --coverage --watchAll=false --testTimeout=10000 --maxWorkers=2",
    "test:e2e:ci": "jest --config ./test/jest-e2e.json --testTimeout=30000 --maxWorkers=1",
    "test:performance": "jest --testPathPattern=performance --testTimeout=30000",
    
    "clean": "rimraf dist coverage .eslintcache .prettiercache",
    "clean:all": "npm run clean && rimraf node_modules package-lock.json",
    "clean:cache": "rimraf .eslintcache .prettiercache",
    
    "deps:check": "npm audit --audit-level=moderate",
    "deps:update": "npm update",
    "deps:outdated": "npm outdated",
    "deps:analyze": "npm list --depth=0 && du -sh node_modules",
    
    "analyze:bundle": "echo \"=== Bundle Analysis ===\" && du -sh dist/ && find dist -name '*.js' -exec ls -lh {} + | sort -k5 -hr",
    "analyze:deps": "npm run deps:analyze",
    "analyze:performance": "echo \"=== Performance Analysis ===\" && npm run build:prod && npm run analyze:bundle",
    "analyze:security": "npm audit --audit-level=moderate --production",
    
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    
    "validate": "npm run clean && npm run typecheck && npm run lint:ci && npm run test:ci && npm run build:prod",
    "ci": "npm run validate",
    
    "dev": "npm run start:dev",
    "prod": "npm run build:prod && npm run start:prod",
    
    "health": "echo \"=== Health Check ===\" && npm run deps:check && npm run typecheck && npm run lint:check && echo \"âœ… Project health OK\"",
    
    "prepare": "husky install || true",
    "postinstall": "npm run clean:cache"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.3",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "setupFilesAfterEnv": [],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.spec.ts",
      "!**/*.interface.ts",
      "!**/main.ts",
      "!**/index.ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run typecheck && npm run test:ci"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "keywords": [
    "nestjs",
    "typescript",
    "calculator",
    "api",
    "microservice",
    "scalable",
    "performance"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/calculadora.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/calculadora/issues"
  },
  "homepage": "https://github.com/your-username/calculadora#readme"
}
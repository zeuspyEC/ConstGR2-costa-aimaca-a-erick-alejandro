# ==========================================
# 📦 NPM CONFIGURATION - OPTIMIZADA
# ==========================================

# Configuración de rendimiento
cache-max=2592000000
prefer-offline=true
package-lock=true
shrinkwrap=true
engine-strict=true

# Configuración de seguridad
audit-level=moderate
fund=false

# Configuración de logs
loglevel=warn
progress=true

# Optimización de instalación
prefer-dedupe=true
install-strategy=hoisted

# Configuración de CI
ci-name=github-actions

# Configuración de desarrollo
save-exact=false
save-prefix=^

# Configuración de red
fetch-retries=3
fetch-retry-factor=2
fetch-timeout=60000

# Configuración de caché
cache-min=864000